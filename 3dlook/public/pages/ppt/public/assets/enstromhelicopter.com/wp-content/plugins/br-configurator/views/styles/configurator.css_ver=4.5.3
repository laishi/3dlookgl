/* CSS Document */

/* Clearing */
.clear:before,
.clear:after,
[class*="content"]:before,
[class*="content"]:after,
[class*="site"]:before,
[class*="site"]:after {
	content: '';
	display: table;
}

.clear:after,
[class*="content"]:after,
[class*="site"]:after {
	clear: both;
}


img {
	width:100%;	
}


/* =Print Logo
----------------------------------------------- */
#enstrom-print-logo {
	display:none;
	width:auto;	
}


/* =Copter Graphic
----------------------------------------------- */
#configurator-cont {
	padding:10px 3%;	
}

/* =Copter Graphic
----------------------------------------------- */
.copter-container {
	overflow:hidden;
	position:relative;
}

	.copc-parts, .copc-highlights, .copc-shadows, .copc-sky, .copc-stripe {
		background:url(../../images/transparency-square.png);
		clear:none;
		display:block;
		height:100%;
		width:100%;
	}
	
		.copc-parts, .copc-highlights, .copc-shadows, .copc-stripe {
			left:0;
			position:absolute;
			top:0;	
		}
		
		.copc-color {
			clear:none;
			display:block;
			height:100%;
			left:0;
			position:absolute;
			top:0;
			width:100%;	
		}
	
		.copc-parts img, .copc-highlights img, .copc-shadows img, .copc-sky img, .copc-stripe img, .copc-color img {
			display:block;
		}
	
		.copc-parts {
			z-index:14;	
		}
	
		.copc-highlights {
			z-index:13;	
		}
		
		.copc-shadows {
			z-index:12;
		}
		
		.copc-stripe {
			z-index:11;	
		}
		
		.copc-sky {
			left:0;
			position:relative;
			top:0;
			z-index:10;
		}
		
		.copc-color {
			height:100%;
			width:100%;
		}

/* =Copter URL
----------------------------------------------- */
#share-url {
	margin:0 0 10px 0;
	width:100%;
}


/* =Copter Choices and Info
----------------------------------------------- */
#copter-info {

}

	#ci-container {
		
	}
		
		#ci-title {
			color:#FFFFFF;
			margin:58px 3% 10px 3%;
			font-size:1.8em;
			line-height:0.9em;
			width:auto;
		}
		
