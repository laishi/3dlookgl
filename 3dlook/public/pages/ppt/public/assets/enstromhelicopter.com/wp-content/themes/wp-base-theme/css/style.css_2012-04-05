/*----------------------------- 
/ Animations
-----------------------------*/
@-webkit-keyframes moveNavHeli /*Safari and Chrome */
{
	0%   {top: 0px; right: 0px;}
	25%  {top: -20px; right: -10px;}
	50%  {top: -30px; right: 0px;}
	75%  {top: -15px; right: 15px;}
	100% {top: 0px; right: 0px;}
}

@-webkit-keyframes moveSplashImageBg /*Safari and Chrome */
{
	0%   {background-position: 0px 0px;}
	20%  {background-position: -2px -1px;}
	40%  {background-position: -5px -2px;}
	60%  {background-position: -7px 0px;}
	80%  {background-position: -4px -4px;}
	100% {background-position: 0px 0px;}
}
